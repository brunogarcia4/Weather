<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.weather.WeatherAppController">
    <children>
        <TextField fx:id="cityInput" promptText="Enter city name" />
        <Button text="Fetch Weather" onAction="#handleFetchWeather" />
        <TextArea fx:id="resultArea" editable="false" />
    </children>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</VBox>
